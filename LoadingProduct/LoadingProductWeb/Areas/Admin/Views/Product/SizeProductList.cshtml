@addTagHelper *,TCVShared
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model PagedList<Taxonomy>
@{
    ViewBag.Icon = "fa-cubes";
    ViewBag.Title = "Kích thước sản phẩm";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2><i class="fa @ViewBag.Icon"></i> @ViewBag.Title</h2>
        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a asp-action="Index" asp-controller="HomeAdmin">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Phân loại kích thước</span></li>
            </ol>
            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-primary" href="@Url.Action("SizeProductCreate", "Product")" data-modal=""><i class="fa fa-plus"></i> Tạo kích thước mới</a>
        </div>
        <div class="col-sm-8 text-right">
            <partial name="_PartialDataFilter" />
        </div>
    </div>
    <div class="table-responsive">
        <pagination model="@Model" query-string="@Context.Request.QueryString" css-style="pagination pagination-sm"></pagination>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã Id</th>
                    <th>Cấp trên</th>
                    <th>Tên gọi</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Content)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.ParentName)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>
                            @Html.UpdateLink("SizeProductUpdate", new { id = item.Id }, true)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>