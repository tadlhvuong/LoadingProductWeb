                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SizeProduct" class="col-sm-3 control-label"></label><span style="color:red;">*</span>
                <div class="col-sm-9">
                    <select id="SizeProduct" name="SizeProduct" class="form-control" , required>
