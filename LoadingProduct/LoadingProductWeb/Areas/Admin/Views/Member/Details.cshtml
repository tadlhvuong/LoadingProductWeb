@model AppUser
@{
    ViewBag.Icon = "fa-user";
    ViewBag.Title = "Thông tin Thành viên";
}
<section role="main" class="content-body">
    <header class="page-header">
        <h2><i class="fa @ViewBag.Icon"></i> @ViewBag.Title</h2>
        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index")">Thành viên</a>
                </li>
                <li>
                    <span>Thông tin</span>
                </li>
            </ol>
            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-primary" href="@Url.Action("Index")"><i class="fa fa-undo"></i> Quay lại</a>
            <a class="btn btn-warning" href="@Url.Action("Update", new { @id = Model.Id })" data-modal=""><i class="fa fa-pencil"></i> Cập nhật</a>
        </div>
        <div class="col-sm-8 text-right">
        </div>
    </div>
    <partial name="_PartialInfo" />
    <div class="m-t">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#charge" aria-controls="charge" role="tab" data-toggle="tab">Log Nạp thẻ</a></li>
            <li role="presentation"><a href="#exchange" aria-controls="exchange" role="tab" data-toggle="tab">Log Đổi thưởng</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="charge">
                <partial name="_PartialCharge" />
            </div>
            <div role="tabpanel" class="tab-pane" id="exchange">
                <partial name="_PartialExchange" />
            </div>
        </div>
    </div>
</section>
